section.headercarousel
  .container
    .row
      #headerimages.carousel.slide(data-ride='carousel')
        // Indicators
        ol.carousel-indicators
          li.active(data-target='#headerimages', data-slide-to='0')
          li(data-target='#headerimages', data-slide-to='1')
          li(data-target='#headerimages', data-slide-to='2')
        // Wrapper for slides
        .carousel-inner
          .item.active
            img(src='/assets/img/dummy/header/01.png', alt='', )
            .carousel-caption
              | ...
          .item
            img(src='/assets/img/dummy/header/02.png', alt='', )
            .carousel-caption
              | ...

        a.left.carousel-control(href='#headerimages', role='button', data-slide='prev')
          span.glyphicon.glyphicon-chevron-left
        a.right.carousel-control(href='#headerimages', role='button', data-slide='next')
          span.glyphicon.glyphicon-chevron-right
